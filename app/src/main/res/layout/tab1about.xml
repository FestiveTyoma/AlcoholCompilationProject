<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.main.PlaceholderFragment">
    <TextView
            android:text="@string/aboutTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center" android:id="@+id/tvTitle"
            android:textSize="24sp" android:textStyle="bold"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="83dp" app:srcCompat="@drawable/default1" android:id="@+id/imageView"/>
    <TextView
            android:text="@string/aboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvTextAbout"/>
</LinearLayout>